<div class="row">
  <%= form_for @event do |f| %>
    <% if @event.errors.any? %>
      <div class="alert error">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="left">
        <div class="field">
          <%= f.date_select :start, order: [:month, :day, :year], start_year: Date.today.year %>
        </div>
    </div>
    <div class="center">
      <div class="listing">
        <div class="field title">
          <%= f.text_field :title, placeholder: "Title" %>
        </div>
        <div class="field subtitle">
          <%= f.text_field :subtitle, placeholder: "Subtitle" %>
        </div>
        <div class="field">
          <%= f.text_field :location, placeholder: "Location" %>
          @
          <%= f.time_select :start, minute_step: 15, ampm: true, ignore_date: true, default: {hour: '19'} %>
        </div>
        <div class="field">
          <%= f.text_field :url, placeholder: "URL" %>
        </div>
        <div class="actions">
          <%= f.submit %>
          <% unless @event.new_record? %>
            <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure you want to delete this item?' } %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
